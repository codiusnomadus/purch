.col-md-10.col-md-offset-1
  .panel.panel-default
    .panel-body
      = simple_form_for @deal, html: { multipart: true } do |f|
        = f.input :title
        = f.association :brand
        = f.input :price
        = f.input :discount_code
        = f.input :savings, as: :text
        = f.input :link
        .panel.panel-default
          .panel-body
            = f.simple_fields_for :uploads do |builder|
              - if @deal.uploads.any?
                .row
                  - @deal.uploads.each do |item|
                      .col-md-2.col-sm-12
                        = image_tag item.upload_url(:small)
              - else
                = image_tag "blog-img-2"
              = render partial: 'uploads/form', locals: { f: builder, uploadable: @deal }

        = f.button :submit, class: "btn btn-success"

