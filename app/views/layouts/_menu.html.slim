nav.navbar.navbar-custom
  .container-fluid
    .navbar-header
      button[type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false"]
        span.sr-only Toggle navigation
        = fa_icon 'bars'

      = link_to root_path, class: 'navbar-brand' do
        = image_tag 'logo'

    .collapse.navbar-collapse[id="bs-example-navbar-collapse"]
      ul.nav.navbar-nav
        li = active_link_to 'Products', products_path

      ul.nav.navbar-nav.navbar-right
        form.navbar-form.navbar-left[role="Search"]
          .input-group
            input[type="text" class="form-control input-lg" placeholder="Search"]
            span.input-group-btn
              button.btn.btn-lg.btn-default#btn-search[type="button"]
                = fa_icon "search"

        - unless current_user && user_signed_in?
          li = active_link_to 'Sign up', new_user_registration_path
          li = active_link_to 'Log in', new_user_session_path

        - if current_user && user_signed_in?
          li.dropdown
            a[href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"]
              | Hi,
              '
              = current_user.email
              span.caret
            ul.dropdown-menu
                li = active_link_to 'Account Settings', edit_user_registration_path
                li = active_link_to "Log out", destroy_user_session_path, method: :delete



