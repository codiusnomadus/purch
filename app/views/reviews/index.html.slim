        .col-md-12.col-sm-12.review-item
          .panel.panel-default.list-item
            .panel-body
              .row
                .col-md-4
                  .image-section
                    - if item.uploads.any?
                      = link_to item do
                        = image_tag item.uploads.last.upload_url(:large)

                .col-md-8
                  h3 = link_to item.title, item, class: 'link'
                  p
