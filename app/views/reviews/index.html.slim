.page-title.page-title-with-content
  h1.text-center
    span Reviews
  .col-md-6.col-md-offset-3
    form
      .input-group
        input[type="text" class="form-control input-lg" placeholder="Search"]
        span.input-group-btn
          button.btn.btn-lg.btn-default#btn-search[type="button"]
            = fa_icon "search"

.container.main
  .featured-review-index-page
    - Review.last(3).each do |item|
      .col-md-4.col-sm-12
        .panel.panel-default
          .panel-heading.image-box
            - if item.uploads.any?
              = link_to item do
                = image_tag item.uploads.last.upload_url(:large)
          .panel-body
            h3 = link_to truncate(item.title, length: 30), item, class: 'link'
            p
              small
                | Posted on
                = item.created_at.strftime('%-d %m, %Y at %l:%M%P')
            p = item.excerpt
            p = link_to 'Read full review', review_path(item), class: 'link-gray'
            p = link_to "http://example.com", class: "btn btn-compare", target: "_blank" do
              | View in Store
              '
              = fa_icon "external-link"

